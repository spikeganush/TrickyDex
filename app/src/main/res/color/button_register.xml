<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is not enabled -->
    <item android:state_enabled="false" android:color="#0C5E35" />
    <!--When Button is in pressed state -->
    <item android:state_pressed="true" android:color="#1EEB85" />
    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="@color/green_button_login" />
    <!--Default Background Color -->
    <item android:color="@color/green_button_login" />

</selector>